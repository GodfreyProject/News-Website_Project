@model SynthesisWebsite.Pages.MakeAcountModel
@{
    ViewData["Title"] = "MakeAcount";
}
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<div class="main_content">
    <form method="post" class="login">
        <h4 class="Title">Make Acount</h4>

        <p class="TextBox" style="text-align: center">    @ViewData["Message"] </p>

        <br />
        <label asp-for="customer.FirstName">FirstName: </label>
