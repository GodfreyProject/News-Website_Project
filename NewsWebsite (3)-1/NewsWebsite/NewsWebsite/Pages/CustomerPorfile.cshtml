@page
@model SynthesisWebsite.Pages.CustomerPorfileModel
@{
    Layout = "Customer_Layout";
    ViewData["Title"] = "CustomerPorfile";
}

<div class="main_content">
    <form method="post" class="login">

        <h4 class="Title">Welcome to Your PROFILE</h4>

        <p class="TextBox" style="text-align: center">    @ViewData["Message"] </p>

        <br />
        <label asp-for="customer.FirstName">FirstName: </label>
        <span asp-validation-for="customer.FirstName"></span>
        <input asp-for="customer.FirstName" class="TextBox" />
        <br />
        <label asp-for="customer.LastName">LastName: </label>
        <span asp-validation-for="customer.LastName"></span>
        <input asp-for="customer.LastName" class="TextBox" />
        <br />
        <label asp-for="customer.Username">UserName: </label>
        <span asp-validation-for="customer.Username"></span>
        <input asp-for="customer.Username" class="TextBox" />
        <br />
        <label asp-for="customer.Email">Email: </label>
        <span asp-validation-for="customer.Email"></span>
        <input asp-for="customer.Email" class="TextBox" />
        <br />
        @*<label asp-for="customer.Password">Password: </label>
        <span asp-validation-for="customer.Password"></span>
        <input type="password" asp-for="customer.Password" class="TextBox" />*@
        <br />
        <label asp-for="customer.Zipcode">Zipcode: </label>
        <span asp-validation-for="customer.Zipcode"></span>
        <input asp-for="customer.Zipcode" class="TextBox" />
        <br />

        <button type="submit" class="button"> Update Acount </button>
        <a style="text-align: center; background-color: white; " class="a nav-link text-dark" asp-area="" asp-page="ChangePassword">Forgot-Password</a>
    </form>
    <br />
    <br />
    <br />
    <br />
</div>

